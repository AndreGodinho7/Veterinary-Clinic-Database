/* Query 1 */

SELECT owner.name as Owner_name, c.name as Animal_name, species_name, age
FROM person owner, person vet, consult c, animal a 
WHERE c.name = a.name
AND owner.vat = c.vat_owner
AND vet.vat = c.vat_vet 
AND vet.name = 'John Smith';

/* Query 2 */

SELECT name, reference_value 
FROM indicator
WHERE reference_value > 100
ORDER BY reference_value desc;

/* Query 3 */
SELECT c.name as Animal_name, p.name as Owner_name, species_name, age, weight 
FROM person p, consult c, animal a
WHERE a.name = c.name 
AND p.vat =c.vat_owner 
AND weight > 30
AND (o like '%obesity%' or o like '%obese%');

